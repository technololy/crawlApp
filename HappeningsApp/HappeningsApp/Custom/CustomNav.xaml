                    Aspect="AspectFit"
                    HeightRequest="93"
                    HorizontalOptions="Center"
                    Scale="1.5"
                    Source="back_button"
                    WidthRequest="93" />
                <Label  FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Center"  TextColor="White" Text="Back"></Label> 
                <Image Grid.Column="0" Aspect="AspectFit" Scale="1.5"   HorizontalOptions="Center" Source="Ic_Back" HeightRequest="28" WidthRequest="45"/>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Back_Tapped" />
                </Grid.GestureRecognizers>
            </Grid>

            <Grid Grid.Column="2">
                <Image
                    x:Name="groupLogo"
                    Aspect="AspectFit"
                    HeightRequest="22"
                    HorizontalOptions="CenterAndExpand"
                    Source="GroupLogo" />


            </Grid>-->
            <Grid Grid.Column="1">
                <Label
                    x:Name="navTitle"
                    FontAttributes="Bold"
                    FontFamily="{DynamicResource EffraBold}"
                    FontSize="18"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Start"
                    IsVisible="false"
                    Text="QuickPolicy"
                    TextColor="White"
                    VerticalOptions="Center" />

            </Grid>
            <Grid
                Grid.Column="2"
                Padding="7,0,0,0"
                HorizontalOptions="EndAndExpand"
                VerticalOptions="Center">

                <Image
                    x:Name="imgNotif"
                    Aspect="AspectFit"
                    HeightRequest="25.25"
                    HorizontalOptions="Center"
                    Scale="1.5"
                    Source="ic_user_white"
                    WidthRequest="38" />
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Profiles_Tapped" />
                </Grid.GestureRecognizers>
            </Grid>

