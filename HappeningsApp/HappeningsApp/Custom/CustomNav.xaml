        </Grid>
        <StackLayout x:Name="boxView" VerticalOptions="End">
            <BoxView
                BackgroundColor="{DynamicResource PrimaryColorAccessOrange}"
                HeightRequest="3"
                HorizontalOptions="Fill" />
        </StackLayout>
    </StackLayout>

</ContentView>




